<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="2.5" type="template" method="upgrade">
    <name>Bootstrap 3.1.1 for Joomla</name>
    <creationDate>April 2014</creationDate>
    <author>David Costa, Gonzalo Suez and Adrian Fürschuß</author>
    <copyright>Copyright © 2014 David Costa</copyright>
    <authorEmail>davidcosta@csthost.com.br</authorEmail>
    <authorUrl>davidcosta.com.br</authorUrl>
    <version>1.2.0-dev</version>
    <description><![CDATA[
        <div class="alert alert-success">
            <h1>Bootstrap 3.1.1 Template for Joomla! 3.x</h1>
            <p>This is a fork in project created by Gonzalo Suez and improve by David Costa and Adrian Fürschuß</p>
            <p>This template is based in Twitter Bootstrap 3.1.1, for Joomla! 3.x or 2.5</p>
            <br>
            <p><a href="https://github.com/davidsantanacosta/joomla-bootstrap-3-template" class="btn btn-primary btn-large" target="_blank">See Last Updates</a> </p>
        </div>
    ]]></description>
    <files>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>includes</folder>
        <folder>js</folder>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>index.php</filename>
        <filename>offline.php</filename>
        <filename>favicon.ico</filename>
        <filename>templateDetails.xml</filename>
    </files>
    <positions>
        <position>top</position>
        <position>top-left</position>
        <position>top-right</position>
        <position>navigation</position>
        <position>breadcrumbs</position>
        <position>fullwidth</position>
        <position>bartop-left</position>
        <position>bartop-right</position>
        <position>showcase</position>
        <position>feature</position>
        <position>left</position>
        <position>right</position>
        <position>content-top</position>
        <position>content-bottom</position>
        <position>bottom-a</position>
        <position>bottom-b</position>
        <position>bottom-c</position>
        <position>footer</position>
        <position>debug</position>
    </positions>
    <config>
        <fields name="params">
            <fieldset name="basic">

                <!-- MODERNIZR-->
                <field name="modernizr" type="radio" default="0" 
                                       label="Modernizr" 
                                       description="Enable JavaScript modernizr.js in head">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <!-- FONT-AWESOME -->
                <field name="fontawesome" type="radio" default="0" 
                                       label="Font Awesome" 
                                       description="Enable Font Awesome for better icons in Bootstrap">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <!-- PIE-->
                <field name="pie" type="radio" default="0" 
                                       label="PIE" 
                                       description="Enable PIE (CSS3 for IE 9+8)">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            <!-- LOGO-->
            <fieldset  name="logo" type="upload_func" label="Logo">
                <field name="logo_file" type="media" label="Select your logo:"></field>
            </fieldset>
        </fields>
    </config>
</extension>
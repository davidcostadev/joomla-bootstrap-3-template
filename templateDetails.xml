<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="2.5" type="template" method="upgrade">
    <name>Bootstrap 3 for Joomla</name>
    <creationDate>2014-03-27</creationDate>
    <author>Gonzalo Suez, Adrian Fürschuß e David Costa</author>
    <copyright>Copyright © 2014 David Costa</copyright>
    <authorEmail>davidcosta@csthost.com.br</authorEmail>
    <authorUrl>davidcosta.com.br</authorUrl>
    <version>Stable 1.0</version>
    <description><![CDATA[ 
		<h1>Bootstrap 3 Template for Joomla! 3.0</h1>
	]]></description>
    <files>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>includes</folder>
        <folder>js</folder>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>index.php</filename>
        <filename>offline.php</filename>
        <filename>favicon.ico</filename>
        <filename>templateDetails.xml</filename>
    </files>
    <positions>
        <position>top</position>
        <position>top-left</position>
        <position>top-right</position>
        <position>navigation</position>
        <position>breadcrumbs</position>
        <position>fullwidth</position>
        <position>bartop-left</position>
        <position>bartop-right</position>
        <position>showcase</position>
        <position>feature</position>
        <position>left</position>
        <position>right</position>
        <position>content-top</position>
        <position>content-bottom</position>
        <position>bottom</position>    
        <position>footer</position>
        <position>debug</position>
    </positions>
    <config>
        <fields name="params">
            <fieldset name="basic">

                <!-- WIDTH MAIN-->
	
                <field name="leftColumnWidth" type="list" default="3" label="Left Column Width" description="Choose a width for your left column">
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </field>
				
                <field name="rightColumnWidth" type="list" default="3" label="Right Column Width" description="Choose a width for your right column">
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </field>
				

                <!-- MODERNIZR-->
                <field name="modernizr" type="radio" default="0" 
                                       label="Modernizr" 
                                       description="Enable JavaScript modernizr.js in head">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <!-- FONT-AWESOME -->
                <field name="fontawesome" type="radio" default="0" 
                                       label="Font Awesome" 
                                       description="Enable Font Awesome for better icons in Bootstrap">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <!-- PIE-->
                <field name="pie" type="radio" default="0" 
                                       label="PIE" 
                                       description="Enable PIE (CSS3 for IE 9+8)">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            <!-- LOGO-->
            <fieldset  name="logo" type="upload_func" label="Logo">
                <field name="logo_file" type="media" label="Select your logo:"></field>
                <field name="logo_link" type="text" label="Logo link:"  description="Example: http://www.ordasoft.com" default="index.php"></field>
                <field name="logo_width" type="text" label="Logo width:" description="Example: 90" default="173"></field>
                <field name="logo_height" type="text" label="Logo height:" description="Example: 90" default="26"></field>
            </fieldset>
        </fields>
    </config>
</extension>